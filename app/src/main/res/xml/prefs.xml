<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="currentSongTracking"
        android:summary="Use network for refreshing current song info while radio is not playing"
        android:title="Refresh while not playing" />

    <ListPreference
        android:defaultValue="60"
        android:entries="@array/pauseLengthEntries"
        android:entryValues="@array/pauseLengthEntryValues"
        android:key="pauseLength"
        android:summary="When player after pressing stop will stop buffering"
        android:title="Pause length" />

    <ListPreference
        android:defaultValue="http://itori.animenfo.com:443"
        android:entries="@array/radioStreamEntries"
        android:entryValues="@array/radioStreamEntryValues"
        android:key="radioStream"
        android:summary="Choose stream server and format"
        android:title="Radio stream url" />
</PreferenceScreen>